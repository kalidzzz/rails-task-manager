<h1> ALL TASKS  </h1>
<div class="box">
  <ul>
    <% @tasks.each do |task| %>
      <li><input type="checkbox"<% if task.completed %> checked<% end %>><%=link_to task.title, task_path(task), class: "checkbox"  %></li>
    <% end %>
   </ul>

    <%= link_to "create a new task", new_task_path(@task), class: "btn-create"%>
  </div>
